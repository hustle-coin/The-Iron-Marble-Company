{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@The-Iron-Marble-Company/model/(.*)": "<rootDir>/../libs/model/src/$1",
    "@The-Iron-Marble-Company/model": "<rootDir>/../libs/model/src"
  }
}
